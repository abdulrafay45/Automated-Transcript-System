@model FYPWeb.Model.StdResult
@{
    ViewBag.Title = "Test";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/font/material-design-icons/Material-Design-Icons.woff" rel="stylesheet">
    <link rel="stylesheet" href="~/CSS/Slide Bar .css" />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NUML</title>
    <link rel="shortcut icon" type="image/png" href="~/Images/logo.png" />
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.css.map" />
    <link rel="stylesheet" href="~/fonts/Font/font-awesome/css/all.min.css" />
    <style>
        .no-vertical-borders {
            border-left: none !important;
            border-right: none !important;
        }
    </style>
</head>

<body>


    <ul id="slide-out" class="side-nav fixed z-depth-2" style="font-size: 1.5rem">
        <li class="center no-padding">
            <div class="indigo darken-2 white-text" style="height: 180px;">
                <div class="row">
                    <img style="margin-top: 5%;" width="100" height="100" src="~/Images/Graduation Cap.png" class="responsive-img" />
                    <p style="color:black">
                        Student
                    </p>
                </div>
            </div>
        </li>
        <li id="dash_dashboard"><a class="waves-effect" style="font-size: 1.5rem" href="@Url.Action("Dashboard","Student")"><i class="fa fa-home"></i>&nbsp;&nbsp;<b>Dashboard</b></a></li>
        <li id="dash_dashboard"><a class="waves-effect" style="font-size: 1.5rem" href="@Url.Action("ChangePassowrd","Student")"><i class="fa fa-eye"></i>&nbsp;&nbsp;<b>Change Password</b></a></li>
        <li id="dash_dashboard"><a class="waves-effect" style="font-size: 1.5rem" href="@Url.Action("Logout","Student")"><i class="fa fa-sign-out"></i>&nbsp;&nbsp;<b>Logout</b></a></li>


    </ul>

    <header>

        <nav class="indigo" role="navigation">
            <div class="nav-wrapper">
                <a data-activates="slide-out" class="button-collapse show-on-" href="#!"><img style="margin-top: 17px; margin-left: 5px;" src="https://res.cloudinary.com/dacg0wegv/image/upload/t_media_lib_thumb/v1463989873/smaller-main-logo_3_bm40iv.gif" /></a>
                <a href="#" data-activates="slide-out" class="button-collapse"><i class="mdi-navigation-menu"></i></a>
            </div>
        </nav>

    </header>
    <main>
        <div class="row" style="Width:95%; margin-left:2%">


            <div class="col s12">
                <div style="padding: 35px 35px 0 35px; " align="center" class="card">
                    <div class="row" style="margin:0">
                        <div class="left card-title">
                            <b>Profile Detail</b>
                        </div>
                    </div>
                    <div class="row">
                        <a href="">
                            <div style="padding: 10px 30px 30px 30px ;" class="lighten-3 col s12 waves-effect">
                                <div class="row">
                                    <!-- Profile Picture Column -->
                                    <div class="col s12 m4">
                                        <img src="~/Images/Rectangle 1.jpg" class="responsive-img" style="border-radius: 20%;" alt="Profile Picture" />
                                    </div>
                                    <!-- End Profile Picture Column -->
                                    <!-- Profile Details Column -->
                                    <div class="col s12 m8" style="color:black">
                                        <div style="text-align:left; font-family: Minion Variable Concept;">
                                            <h2>@Model.student.Name</h2>
                                            <h3>System ID : @Model.student.SystemID</h3>
                                            <h3>Degree: @Model.student.Degree (@Model.Programme.ProgrammeName)</h3>
                                        </div>
                                    </div>

                                    <!-- End Profile Details Column -->
                                </div>
                                <hr />
                                <div class="col s12 m4" style="margin-top:2%;color:black">
                                    <div style="text-align:left; font-family: Minion Variable Concept;">
                                        <h3>Department : @Model.Programme.ProgrammeName</h3>
                                    </div>
                                </div>
                                <div class="col s12 m4" style="margin-top:2%;color:black">
                                    <div style="text-align:left; font-family: Minion Variable Concept;">
                                        <h3>Faculty : @Model.student.Faculty</h3>
                                    </div>
                                </div>
                            </div>

                        </a>

                        <div class="col s1">&nbsp;</div>
                        <div class="col s1">&nbsp;</div>

                    </div>

                </div>

            </div>
            <br />
            <br />
            <br />
            <div class="row">
                <div class="col-12">
                    <table id="keywords" class="table table-bordered" style="border: 1px solid lightgray; font-size: 1.7em">
                        <thead>
                            <tr style="background: #c9dff0;">
                                <th><span>Sr No</span></th>
                                <th><span>Semester</span></th>
                                <th><span></span></th>
                                <th><span></span></th>
                                <th><span></span></th>
                                <th><span></span></th>
                                <th><span></span></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int i = 0;
                            }
                            @foreach (var req in Model.results)
                            {
                            <tr>
                                @{
                                    i += 1;
                                }
                                <td class="lalign">@i.</td>
                                <td class="no-vertical-borders">Semester - @req.SemesterId</td>
                                <td class="no-vertical-borders"></td>
                                <td class="no-vertical-borders"></td>
                                <td class="no-vertical-borders"></td>
                                <td><a href="@Url.Action("Result", "Student", new { ID = req.SemesterId })"><i class="fa fa-eye"></i></a></td>
                                <td><a href="@Url.Action("SemResult", "Student", new { ID = req.SemesterId })"><i class="fa fa-download"></i></a></td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>



        </div>
    </main>
    <script src="https://code.jquery.com/jquery-2.2.4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/js/materialize.min.js"></script>
    <script>
        $('.button-collapse').sideNav();

        $('.collapsible').collapsible();

        $('select').material_select();
    </script>

    <script>
        document.getElementById('btnOfficial').addEventListener('click', function () {
            document.getElementById('officialTranscript').style.display = 'block';
            document.getElementById('unofficialTranscript').style.display = 'none';
        });

        document.getElementById('btnUnofficial').addEventListener('click', function () {
            document.getElementById('unofficialTranscript').style.display = 'block';
            document.getElementById('officialTranscript').style.display = 'none';
        });
    </script>
</body>
</html>

